<link rel="stylesheet" href="~/css/signin.css" />

<div id="signin">
    @if(@User.Identity.IsAuthenticated)
    {
        <div id="user-name">Hello @User.Identity.Name</div>
        <a id="scarab-link" asp-area="" asp-controller="Account" asp-action="Logout">注销</a>
    }
    else
    {
        <a id="scarab-link"  asp-area="" asp-controller="Account" asp-action="Login">登陆</a>
    }
</div>